<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPain" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lab8.Client.VehicleCollectionClient.AppController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
               <menus>
                  <Menu fx:id="menuFile" mnemonicParsing="false" text="File">
                     <items>
                        <Menu fx:id="menuFileChangeLang" mnemonicParsing="false" text="Change language">
                          <items>
                              <MenuItem fx:id="menuFileChangeLangRU" mnemonicParsing="false" onAction="#changeLanguageToRu" text="Русский" />
                              <MenuItem fx:id="menuFileChangeLangEN" mnemonicParsing="false" onAction="#changeLanguageToEn" text="English" />
                              <MenuItem fx:id="menuFileChangeLangTR" mnemonicParsing="false" onAction="#changeLanguageToTr" text="Türk" />
                              <MenuItem fx:id="menuFileChangeLangDA" mnemonicParsing="false" onAction="#changeLanguageToDa" text="Dansk" />
                              <MenuItem fx:id="menuFileChangeLangES_ME" mnemonicParsing="false" onAction="#changeLanguageToEsMe" text="Español (Mexico)" />
                          </items>
                        </Menu>
                        <MenuItem fx:id="menuFileExit" mnemonicParsing="false" onAction="#exit" text="Exit" />
                     </items>
                  </Menu>
                  <Menu fx:id="menuServer" mnemonicParsing="false" text="Server">
                     <items>
                        <MenuItem fx:id="menuServerConnect" mnemonicParsing="false" onAction="#connect" text="Connect" />
                        <MenuItem fx:id="menuServerLogIn" mnemonicParsing="false" text="Log in" />
                        <MenuItem fx:id="menuServerRegister" mnemonicParsing="false" text="Register" />
                     </items>
                  </Menu>
                  <Menu fx:id="menuCollection" mnemonicParsing="false" text="Collection">
                    <items>
                      <MenuItem fx:id="menuCollectionInfo" mnemonicParsing="false" text="Information" />
                        <MenuItem fx:id="menuCollectionAdd" mnemonicParsing="false" text="Add Vehicle" />
                        <Menu fx:id="menuCollectionSort" mnemonicParsing="false" text="Sort">
                          <items>
                            <MenuItem fx:id="menuCollectionSortByType" mnemonicParsing="false" text="By type" />
                              <MenuItem fx:id="menuCollectionSortByName" mnemonicParsing="false" text="By name" />
                          </items>
                        </Menu>
                    </items>
                  </Menu>
                  <Menu fx:id="menuHelp" mnemonicParsing="false" text="Help">
                     <items>
                        <MenuItem fx:id="menuHelpAbout" mnemonicParsing="false" text="About" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="-Infinity" minWidth="200.0" prefHeight="35.0">
               <children>
                  <Label fx:id="connectionStatusLabel" text="Connection status">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.6" BorderPane.alignment="CENTER">
        <items>
            <VBox alignment="TOP_CENTER">
               <children>
                  <TableView fx:id="vehiclesTable" editable="true" maxHeight="2000.0" maxWidth="3000.0" minHeight="200.0" minWidth="200.0" prefHeight="500.0" prefWidth="700.0" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="idColumn" maxWidth="200.0" minWidth="20.0" prefWidth="40.0" text="ID" />
                        <TableColumn fx:id="keyColumn" maxWidth="200.0" minWidth="20.0" prefWidth="60.0" text="Key" />
                        <TableColumn fx:id="userColumn" maxWidth="200.0" minWidth="20.0" prefWidth="60.0" text="User" />
                        <TableColumn fx:id="nameColumn" maxWidth="200.0" minWidth="20.0" prefWidth="70.0" text="Name" />
                        <TableColumn fx:id="coordinatesColumn" maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Coordinates">
                           <columns>
                              <TableColumn fx:id="coordinatesXColumn" maxWidth="200.0" prefWidth="50.0" text="X" />
                              <TableColumn fx:id="coordinatesYColumn" maxWidth="200.0" prefWidth="50.0" text="Y" />
                           </columns>
                        </TableColumn>
                        <TableColumn fx:id="dateColumn" maxWidth="200.0" minWidth="20.0" text="Date" />
                        <TableColumn fx:id="enginePowerColumn" maxWidth="200.0" minWidth="20.0" prefWidth="50.0" text="Power" />
                        <TableColumn fx:id="numberOfWheelsColumn" maxWidth="200.0" minWidth="20.0" prefWidth="50.0" text="Number of wheels" />
                        <TableColumn fx:id="capacityColumn" maxWidth="200.0" minWidth="20.0" prefWidth="50.0" text="Capacity" />
                        <TableColumn fx:id="typeColumn" maxWidth="200.0" minWidth="20.0" prefWidth="50.0" text="Type" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </TableView>
                  <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="-Infinity" minWidth="100.0" prefHeight="35.0" spacing="20.0" VBox.vgrow="NEVER">
                     <children>
                        <Button fx:id="addVehicleButton" mnemonicParsing="false" text="Add Vehicle" />
                        <Label fx:id="collectionInfoLabel" text="Collection info:">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </VBox>
            <VBox alignment="TOP_CENTER">
               <children>
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="ALWAYS" hvalue="0.5" minHeight="200.0" minWidth="200.0" prefHeight="500.0" prefWidth="500.0" vbarPolicy="ALWAYS" vvalue="0.5" VBox.vgrow="ALWAYS">
                     <content>
                        <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="600.0" />
                     </content>
                     <VBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </VBox.margin>
                  </ScrollPane>
                  <ButtonBar buttonMinWidth="50.0" maxHeight="-Infinity" minHeight="-Infinity" nodeOrientation="LEFT_TO_RIGHT" prefHeight="35.0" VBox.vgrow="NEVER">
                     <buttons>
                        <Button mnemonicParsing="false" text="Show all" textAlignment="CENTER" />
                        <Button mnemonicParsing="false" text="Centre" />
                     </buttons>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </ButtonBar>
               </children>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </VBox>
        </items>
      </SplitPane>
   </center>
</BorderPane>
